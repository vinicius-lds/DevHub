<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="AnchorPane" fx:id="ap_principal" onMouseClicked="#ap_principalOnClick" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane fx:id="gp_file" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <columnConstraints>
         <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="55.0" minWidth="55.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="64.0" minWidth="64.0" prefWidth="64.0" />
      <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" />
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints maxHeight="64.0" minHeight="64.0" prefHeight="64.0" vgrow="NEVER" />
    </rowConstraints>
      <children>
         <ImageView fx:id="iv_icon" fitHeight="62.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" />
         <Label fx:id="lbl_nome" text="Arquivo" GridPane.columnIndex="2">
            <GridPane.margin>
               <Insets left="15.0" right="15.0" />
            </GridPane.margin>
         </Label>
         <Label fx:id="lbl_tamanho" text="2MB" GridPane.columnIndex="3">
            <GridPane.margin>
               <Insets left="15.0" right="15.0" />
            </GridPane.margin>
         </Label>
         <Label fx:id="lbl_extensao" text="java" GridPane.columnIndex="4">
            <GridPane.margin>
               <Insets left="15.0" right="15.0" />
            </GridPane.margin>
         </Label>
         <JFXCheckBox fx:id="cb_add" checkedColor="#0047ab" text="." />
      </children>
  </GridPane>
</AnchorPane>
